<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--获得焦点样式-->
    <item android:state_focused="true" android:drawable="@drawable/btn_commit_highlight"/>
    <!--选中时样式-->
    <item android:state_selected="true" android:drawable="@drawable/btn_commit_highlight"/>
    <!--按下时样式-->
    <item android:state_pressed="true" android:drawable="@drawable/btn_commit_highlight"/>

    <!--默认状态-->
    <item android:drawable="@drawable/btn_commit_normal"/>
</selector>