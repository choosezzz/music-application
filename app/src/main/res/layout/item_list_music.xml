<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/item_commit_selector"
    android:padding="@dimen/margin_size">

    <!--左侧图片-->
    <ImageView
        android:layout_width="@dimen/music_list_img_size"
        android:layout_height="@dimen/music_list_img_size"
        android:src="@mipmap/img_3"
        />

    <!--中间歌曲名称，歌手名称-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/margin_size"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/title_color"
            android:textSize="@dimen/title_size"
            android:textStyle="bold"
            android:text="天使的翅膀"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/info_color"
            android:textSize="@dimen/info_size"
            android:text="腾格尔"/>
    </LinearLayout>

    <!--播放暂停图片-->
    <ImageView
        android:layout_width="@dimen/music_play_img_size"
        android:layout_height="@dimen/music_play_img_size"
        android:src="@mipmap/ic_play_black"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_size"/>

</LinearLayout>